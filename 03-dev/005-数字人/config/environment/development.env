# 数字员工项目 - 开发环境配置
# 此文件包含开发环境的所有配置项

# =============================================================================
# 基础配置
# =============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# =============================================================================
# 服务端口配置
# =============================================================================
# PostgreSQL
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# Redis
REDIS_PORT=6379
REDIS_HOST=localhost

# MinIO
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_HOST=localhost

# 应用端口
API_PORT=3001
FRONTEND_PORT=3000

# =============================================================================
# 数据库配置
# =============================================================================
POSTGRES_DB=digital_employee_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/digital_employee_dev

# 数据库连接池
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# Redis配置
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Redis连接池
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=30

# =============================================================================
# MinIO配置
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=digital-employee-dev
MINIO_REGION=us-east-1
MINIO_SECURE=false

# =============================================================================
# JWT配置
# =============================================================================
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# API配置
# =============================================================================
API_PREFIX=/api/v1
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# =============================================================================
# 文件上传配置
# =============================================================================
MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_PATH=./data/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,avi,mov,mp3,wav,pdf,doc,docx

# =============================================================================
# AI服务配置
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Azure语音服务
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_LANGUAGE=zh-CN

# 语音模型
TTS_MODEL=cosyvoice
STT_MODEL=azure

# =============================================================================
# 缓存配置
# =============================================================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=3600
CACHE_KEY_PREFIX=digital_employee_dev

# =============================================================================
# 日志配置
# =============================================================================
LOG_FILE=./logs/development.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# 监控配置
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# 前端配置
# =============================================================================
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001
WS_URL=ws://localhost:3001

# 开发服务器配置
VITE_PORT=3000
VITE_HOST=localhost
VITE_HMR_PORT=24678

# =============================================================================
# 安全配置
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# CSRF保护
CSRF_ENABLED=true
CSRF_SECRET=dev-csrf-secret-change-in-production

# =============================================================================
# 性能配置
# =============================================================================
WORKER_PROCESSES=1
WORKER_THREADS=4
WORKER_TIMEOUT=30

# 连接池
CONNECTION_POOL_SIZE=10
CONNECTION_MAX_OVERFLOW=20

# =============================================================================
# 测试配置
# =============================================================================
TEST_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/digital_employee_test
TEST_REDIS_URL=redis://localhost:6379/15
MOCK_EXTERNAL_SERVICES=true

# =============================================================================
# 第三方服务配置
# =============================================================================
# Supabase（可选）
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# 邮件服务
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# 短信服务
SMS_PROVIDER=
SMS_ACCESS_KEY=
SMS_SECRET_KEY=
SMS_REGION=

# =============================================================================
# 本地开发工具配置
# =============================================================================
# 数据库管理工具
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin123

# Redis管理工具
REDIS_COMMANDER_PORT=8081

# API文档
API_DOCS_PORT=3001
API_DOCS_ENABLED=true