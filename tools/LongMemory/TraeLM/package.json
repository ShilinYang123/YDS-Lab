{
  "name": "js003-trae-memory-implementation",
  "version": "1.0.0",
  "description": "Trae长记忆功能实施项目 - 规则系统与知识图谱记忆的完整实现",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npm run build && nodemon dist/src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.config.simple.js --runInBand --verbose tests/integration",
    "test:e2e": "jest --config jest.config.simple.js --runInBand --verbose --detectOpenHandles tests/e2e",
    "test:unit": "jest --config jest.config.simple.js --runInBand --verbose tests/unit",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write src/**/*.{js,ts,json,md}",
    "init-knowledge-graph": "node scripts/init-knowledge-graph.js",
    "validate-rules": "node scripts/validate-rules.js",
    "backup-memory": "node scripts/backup-memory.js",
    "build": "tsc",
    "clean": "rimraf dist coverage"
  },
  "keywords": [
    "trae",
    "memory",
    "knowledge-graph",
    "rules-system",
    "ai-agent",
    "intelligent-development"
  ],
  "author": "高级软件专家",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "S:\\HQ-OA\\tools\\LongMemory\\TraeLM"
  },
  "bugs": {
    "url": "https://github.com/trae-ai/js003-memory-implementation/issues"
  },
  "homepage": "https://github.com/trae-ai/js003-memory-implementation#readme",
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
