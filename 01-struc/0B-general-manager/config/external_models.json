{
  "stt": {
    "default": "shimmy.whisper-tiny-zh",
    "providers": {
      "shimmy": {
        "host": "http://127.0.0.1:51080",
        "models": ["whisper-tiny-zh", "whisper-small-zh"],
        "priority": 2
      },
      "azure": {
        "endpoint": "https://<your-azure-stt>",
        "key": "<secure>",
        "priority": 1
      }
    }
  },
  "tts": {
    "default": "shimmy.onnx-zh",
    "providers": {
      "shimmy": {
        "host": "http://127.0.0.1:51080",
        "voices": ["zh_female", "zh_male"]
      }
    }
  },
  "llm": {
    "default": "ollama.qwen2.5",
    "providers": {
      "ollama": {
        "host": "http://127.0.0.1:11434",
        "models": ["qwen2.5:latest", "llama3.1:8b"]
      }
    }
  }
}